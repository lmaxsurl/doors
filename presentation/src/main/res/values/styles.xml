<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    
    <style name="MainScreenTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/item_selector</item>
        <item name="android:paddingStart">@dimen/app_padding</item>
        <item name="android:paddingEnd">@dimen/app_padding</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="NoInternetIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/sad</item>
        <item name="android:contentDescription">@string/sad_face</item>
    </style>

    <style name="ErrorEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="NoInternetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/app_padding</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/try_again</item>
    </style>

    <style name="AppConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="InfoTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/app_padding</item>
        <item name="android:paddingStart">@dimen/app_padding</item>
        <item name="android:paddingEnd">@dimen/app_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="InfoClickTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/app_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/item_selector</item>
    </style>

</resources>
